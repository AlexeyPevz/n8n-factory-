# Copy this file to .env and fill with your values
# cp .env.example .env

# ===== WORKFLOW IDs =====
# After importing workflows into n8n, copy ID from URL
# Example: http://localhost:5678/workflow/abc123def <- this abc123def
WF_01_WORKFLOW_ID=REPLACE_WITH_YOUR_WF01_ID
WF_02_WORKFLOW_ID=REPLACE_WITH_YOUR_WF02_ID
WF_03_WORKFLOW_ID=REPLACE_WITH_YOUR_WF03_ID
WF_04_WORKFLOW_ID=REPLACE_WITH_YOUR_WF04_ID
WF_05_WORKFLOW_ID=REPLACE_WITH_YOUR_WF05_ID
WF_06_WORKFLOW_ID=REPLACE_WITH_YOUR_WF06_ID

# ===== GOOGLE SHEETS =====
# ID from sheet URL
# https://docs.google.com/spreadsheets/d/1ABC...XYZ/edit <- this 1ABC...XYZ
GOOGLE_SHEET_ID=REPLACE_WITH_YOUR_GOOGLE_SHEET_ID

# ===== TELEGRAM =====
# Chat ID for admin notifications
TELEGRAM_ADMIN_CHAT_ID=-1001234567890

# Chat ID for sales team notifications  
TELEGRAM_SALES_CHAT_ID=-1001234567891

# Chat ID for supplier notifications
TELEGRAM_SUPPLIER_CHAT_ID=-1001234567892

# ===== BITRIX24 =====
# Webhook URL from Bitrix24 (Developers → Other → Inbound webhook)
# Must end with /
BITRIX24_WEBHOOK_URL=https://your-domain.bitrix24.ru/rest/1/your_webhook_key/

# Sales Manager ID for tasks (default: 1)
SALES_MANAGER_ID=1

# Account Manager ID for post-sale tasks (default: 1)
ACCOUNT_MANAGER_ID=1

# ===== API KEYS =====
# Yandex Maps API
YANDEX_MAPS_API_KEY=your_yandex_maps_api_key_here

# 2GIS API
TWOGIS_API_KEY=your_2gis_api_key_here

# OpenAI API for AI Agent
OPENAI_API_KEY=sk-...your_openai_key_here

# ===== n8n FEATURES =====
# Enable AI features
N8N_EXPERIMENTAL_AI_ENABLE=true

# ===== REDIS =====
# Redis connection for caching and state management
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# ===== BUSINESS HOURS =====
# Working hours for automated messages (24h format)
WORK_HOURS_START=9
WORK_HOURS_END=18
# Working days (1=Monday, 5=Friday)
WORK_DAYS_START=1
WORK_DAYS_END=5
# Cache TTL in seconds (default: 24 hours)
REDIS_CACHE_TTL=86400

# ===== OPTIONAL: MESSAGING =====
# Supplier email for hot lead notifications
SUPPLIER_EMAIL=supplier@example.com

# MTProto API (for Telegram userbot)
TELEGRAM_API_ID=your_api_id
TELEGRAM_API_HASH=your_api_hash
MTPROTO_API_URL=http://localhost:5000
MTPROTO_API_TOKEN=your-mtproto-token

# WhatsApp Business API
WHATSAPP_API_TOKEN=your_whatsapp_token
WHATSAPP_PHONE_ID=your_phone_id

# Email SMTP
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password